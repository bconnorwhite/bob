{
  "name": "@bconnorwhite/bob",
  "version": "1.7.1",
  "description": "Bob builds and watches typescript projects. He'll even clean up your build directory when you delete or move files.",
  "author": "Connor White",
  "license": "MIT",
  "keywords": [
    "build",
    "typescript",
    "watch",
    "clean",
    "react",
    "babel"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bconnorwhite/bob.git"
  },
  "bin": {
    "babel": "./build/bin/index.js"
  },
  "main": "./build/index.js",
  "scripts": {
    "build": "yarn build:b && yarn build:d",
    "build:b": "babel ./src --out-dir ./build --config-file ./babel.config.json --extensions .ts --delete-dir-on-start --copy-files",
    "build:d": "yarn tsc ./src/*.ts --declaration --emitDeclarationOnly --esModuleInterop --forceConsistentCasingInFileNames --outDir ./build --removeComments --skipLibCheck --strict",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/plugin-transform-runtime": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@babel/runtime": "^7.10.5",
    "@bconnorwhite/exec": "^3.0.3",
    "@bconnorwhite/package": "^2.1.2",
    "@bconnorwhite/run-env": "^1.1.0",
    "chokidar": "^3.4.1",
    "commander": "^6.0.0",
    "dotenv": "^8.2.0",
    "find": "^0.3.0",
    "nodemon": "^2.0.4",
    "package-run": "^1.1.0",
    "typescript": "^3.9.7",
    "wait-on": "^5.1.0"
  },
  "devDependencies": {
    "@types/find": "^0.2.1",
    "@types/node": "^14.0.26",
    "@types/nodemon": "^1.19.0",
    "@types/wait-on": "^4.0.0"
  }
}
