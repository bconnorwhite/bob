{
  "name": "@bconnorwhite/bob",
  "version": "1.3.3",
  "description": "Bob builds and watches typescript projects. He'll even clean up your build directory when you delete or move files.",
  "author": "Connor White",
  "license": "MIT",
  "keywords": [
    "build",
    "typescript",
    "watch",
    "clean",
    "react",
    "babel"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bconnorwhite/bob.git"
  },
  "main": "./build/index.js",
  "bin": {
    "bob": "./build/bin/index.js"
  },
  "scripts": {
    "build": "yarn build:b && yarn build:d",
    "build:b": "babel ./src --out-dir ./build --config-file ./babel.config.json --extensions .ts --delete-dir-on-start --copy-files",
    "build:d": "yarn tsc ./src/*.ts --declaration --emitDeclarationOnly --esModuleInterop --forceConsistentCasingInFileNames --outDir ./build --removeComments --skipLibCheck --strict",
    "prepublishOnly": "yarn build",
    "test": "node ./build/bin/index.js"
  },
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.9.0",
    "@babel/runtime": "^7.9.2",
    "@bconnorwhite/exec": "^1.0.2",
    "chokidar": "^3.3.1",
    "commander": "^5.0.0",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@types/node": "^13.9.5"
  }
}
